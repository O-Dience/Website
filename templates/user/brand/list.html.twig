{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - Liste des marques
{% endblock %}

{% block body %}

<div class="d-flex justify-content-between align-items-start mt-5">
    <h1>Liste des marques</h1>
</div>

<div class="mt-5">
    <div class="list-group">
        {% for influencer in users %}
        <a href="{{path('user_show', {'id': influencer.id})}}" class="list-group-item list-group-item-action">
            {{ influencer.username }}
        </a>
        {% endfor %}
    </div>
</div>
{% endblock %}