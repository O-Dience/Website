{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Edition de profil
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('assets/css/dashboard.css')}}">
{% endblock %}

{% block body %}

<div class="container-md">
	<div class="row profile align-items-center">
		<div class="col-md-3">
			{% include 'partials/_profile_sidebar.html.twig' %}
		</div>
		<div class="card bg-light col-md-9 overflow_dashboard">
		<article class="card-body mx-auto" style="max-width: 400px;">
		<h4 class="card-title mt-3 text-center">Editer mon profil</h4>
		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}	
			<div class="form-group input-group mt-4">
				<div class="input-group-prepend">
		    		<span class="input-group-text"> <i class="fa fa-user"></i> </span>
		 		</div>
        	   {{form_widget(form.username)}}
    		</div> 
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"> <i class="fa fa-calendar"></i> </span>
				</div>
				{{form_widget(form.birthdate)}}
			</div> 
			<div class="form-group input-group">
				<div class="input-group-prepend">
					<span class="input-group-text"> <i class="fa fa-heart"></i> </span>
				</div>
				{{form_widget(form.categories)}}
			</div> 
			<div class="form-group input-group mt-4">
				<div class="input-group-prepend">
					<span class="input-group-text"> <i class="fa fa-id-card-o"></i></span>
				</div>
				{{form_widget(form.description)}}
			</div> 
			<div class="form-group input-group mt-4">
				<div class="input-group-prepend">
					<span class="input-group-text"> <i class="fa fa-file-image-o"></i></span>
				</div>
				{{form_widget(form.pictureFile)}}
			</div> 
			<div class="form-group input-group mt-4">
				<div class="input-group-prepend">
					<span class="input-group-text"> <i class="fa fa-at"></i></span>
				</div>
				{{form_widget(form.email)}}
			</div> 
			<div class="form-group input-group margin-auto">	
				{{form_widget(form.password)}}
			</div>                                      
			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-block"> Enregistrer modification </button>
			</div>                                                                       
			{{ form_end(form) }}
		</article>
		</div> 
	</div>
</div> 


{% endblock %}