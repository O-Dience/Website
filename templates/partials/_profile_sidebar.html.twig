{% block stylesheets %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fork-awesome@1.1.7/css/fork-awesome.min.css" integrity="sha256-gsmEoJAws/Kd3CjuOQzLie5Q3yshhvmo7YNtBG7aaEY=" crossorigin="anonymous">
{% endblock %}

<div
	class="profile-sidebar">
	<!-- SIDEBAR USERPIC -->
	<div class="profile-userpic">
		<img src="{{asset('assets/images/avatar_user/') ~ user.picture}}" class="img-fluid" alt="">
	</div>
	<!-- END SIDEBAR USERPIC -->
	<!-- SIDEBAR USER TITLE -->
	<div class="profile-usertitle">
		<div class="profile-usertitle-name">
			{{user.username}}
		</div>
		<div class="profile-usertitle-job">
			{# {% for socialProfile in user.userSocials %}
				{% if not loop.first %},
				{% endif %}
				{{ socialProfile.social.name }}
				-
				{{ socialProfile.link }}
			{% endfor %} #}
			{{ user.userFavorites | length }}
		</div>
	</div>
	<!-- END SIDEBAR USER TITLE -->
	<!-- SIDEBAR BUTTONS -->
	<div class="profile-userbuttons">
		{% for category in user.categories %}
			<span class="label label-info">{{category.label}}</span>
		{% endfor %}
	</div>
	<!-- END SIDEBAR BUTTONS -->
	<!-- SIDEBAR MENU -->
	<div class="profile-usermenu">
		<ul class="list-group">
			{% if ( 'ROLE_BRAND' in user.roles) %}
			<a href="{{path('user_dashboard', {id: user.id})}}" class="btn  list-group-item {{ ( app.request.get('_route') == 'user_dashboard') ? 'active' : '' }}">
				<i class="fa fa-home ml-1 mr-1" aria-hidden="true"></i>
				Mes annonces en ligne
			</a>
			<a href="{{path('announcement_new', {id: user.id})}}" class="btn  list-group-item {{ ( app.request.get('_route') == 'announcement_new') ? 'active' : '' }}">
				<i class="fa fa-home ml-1 mr-1" aria-hidden="true"></i>
				Créer une annonce
			</a>
			{% elseif ( 'ROLE_INFLUENCER' in user.roles) %}
			<a href="{{path('user_dashboard', {id: user.id})}}" class="btn  list-group-item {{ ( app.request.get('_route') == 'user_dashboard') ? 'active' : '' }}">
				<i class="fa fa-home ml-1 mr-1" aria-hidden="true"></i>
				Mes annonces favorites
			</a>
			{% endif %}
			<a href="{{path('user_edit', {id: user.id})}}" class="btn  list-group-item {{ ( app.request.get('_route') == 'user_edit') ? 'active' : '' }}">
				<i class="fa fa-cog ml-1 mr-1" aria-hidden="true"></i>
				Editer mon profil
			</a>
			<a href="{{path('social_profile', {id: user.id})}}" class="btn  list-group-item {{ ( app.request.get('_route') == 'social_profile') ? 'active' : '' }}">
				<i class="fa fa-mobile ml-1 mr-1" aria-hidden="true"></i>
				Gérer mes réseaux sociaux
			</a>
		</ul>
	</div>
	<!-- END MENU -->
</div>

