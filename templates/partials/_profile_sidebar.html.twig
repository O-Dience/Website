{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fork-awesome@1.1.7/css/fork-awesome.min.css" integrity="sha256-gsmEoJAws/Kd3CjuOQzLie5Q3yshhvmo7YNtBG7aaEY=" crossorigin="anonymous">
{% endblock %}

<div class="profile-sidebar">
				<!-- SIDEBAR USERPIC -->
				<div class="profile-userpic">
					<img src="{{asset('assets/images/avatar_user/') ~ brand.picture}}" class="img-fluid" alt="">
				</div>
				<!-- END SIDEBAR USERPIC -->
				<!-- SIDEBAR USER TITLE -->
				<div class="profile-usertitle">
					<div class="profile-usertitle-name">
						{{brand.username}}
					</div>
					<div class="profile-usertitle-job">
						{% for socialProfile in brand.userSocials %}
                            {% if not loop.first %}, {% endif %}
                            {{ socialProfile.social.name }} - {{ socialProfile.link }}
                        {% endfor %}
					</div>
				</div>
				<!-- END SIDEBAR USER TITLE -->
				<!-- SIDEBAR BUTTONS -->
				<div class="profile-userbuttons">
        {% for category in brand.categories %}
					<span class="label label-info">{{category.label}}</span>
        {% endfor %}
				</div>
				<!-- END SIDEBAR BUTTONS -->
				<!-- SIDEBAR MENU -->
				<div class="profile-usermenu">
					<ul class="list-group">
						<a href="{{path('user_dashboard', {id: app.user.id})}}" class="btn  list-group-item {{ ( app.request.get('_route') == 'user_dashboard') ? 'active' : '' }}">
							<i class="fa fa-home" aria-hidden="true"></i>
							Mes annonces en ligne
            </a>
            <a href="{{path('user_edit', {id: app.user.id})}}" class="btn  list-group-item {{ ( app.request.get('_route') == 'user_edit') ? 'active' : '' }}">
							<i class="fa fa-home" aria-hidden="true"></i>
							Editer mon profil
            </a>
					</ul>
				</div>
				<!-- END MENU -->
			</div>