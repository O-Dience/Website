{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} - {{announcement.title }} {% endblock %}

{% block body %}
    <h1>{{ announcement.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ announcement.content }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ announcement.image }}</td>
            </tr>
            <tr>
                <th>Publié le</th>
                <td>{{ announcement.createdAt ? announcement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
           
           <!-- ajouter une condition: si annonce a été éditée, mettre un petit message "Modifié le: + date" -->
            <tr>
                <th>Updated_at</th>
                <td>{{ announcement.updatedAt ? announcement.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('announcement_list') }}">Liste des annonces</a>

    <a href="{{ path('announcement_edit', {'id': announcement.id}) }}">Modifier l'annonce</a>

    {{ include('announcement/_delete_form.html.twig') }}
{% endblock %}
